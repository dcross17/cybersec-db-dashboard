{# READ table #}
<table>
    <thead>
        <tr>
            {% if users|length > 0 %}
                {% for key in users[0].keys() %}
                <th>{{ key }}</th>
                {% endfor %}
            {% else %}
                <th>No data available</th>
            {% endif %}
            <th></th>
        </tr>
    </thead>
    <tbody>
        {% if users|length > 0 %}
            {% for user in users %}
            <tr>
                <td>{{ user['User ID'] }}</td>
                <td>{{ user['First Name'] }}</td>
                <td>{{ user['Last Name'] }}</td>
                <td>{{ user['Email'] }}</td>
                <td>{{ user['Department'] }}</td>
                <td>{{ user['Role'] }}</td>
                <form id="delete_user_form" method="POST" action = "/Users/delete">
                    <input type="hidden" name="delete_user_id" value="{{ user['User ID'] }}">
                    <input type="hidden" name="delete_user_name" value="{{ user['First Name'] }} {{ user['Last Name'] }}">
                    <td>
                        <button type="submit">
                            Delete
                        </button>
                    </td>
                </form>
            </tr>
            {% endfor %}
        {% else %}
            <tr>
                <td colspan="7">No users found.</td>
            </tr>
        {% endif %}
    </tbody>
</table>



{% endblock %}