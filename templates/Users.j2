{% extends "main.j2" %}
{% block content %}

<h1>Users</h1>

{# READ table #}
<table>
    <thead>
        {# For the table header row, we print the DB attribute names #}
        <tr>
            {% for key in users[0].keys() %}
            <th>{{ key }}</th>
            {% endfor %}
            <th></th>
        </tr>
    </thead>

    <tbody>
        {% for user in users %}
        <tr>
            <td>{{ user['userID'] }}</td>
            <td>{{ user['firstName'] }}</td>
            <td>{{ user['lastName'] }}</td>
            <td>{{ user['email'] }}</td>
            <td>{{ user['department'] }}</td>
            <td>{{ user['role'] }}</td>


            {# DELETE form #}
            <form id="delete_user_form">
                <input type="hidden" name="delete_user_id" value="{{ user['userID'] }}">
                <input type="hidden" name="delete_user_name" value="{{ user['firstName'] }} {{ user['lastName'] }}">
                <td>
                    <button type="submit">
                        Delete
                    </button>
                </td>
            </form>
        </tr>
        {% endfor %}
    </tbody>
</table>

{# CREATE form #}
<h2>Create a User</h2>
<form class="cuForm" id="create_user_form">
    <label for="create_user_firstName">First Name: </label>
    <input type="text" name="create_user_firstName" id="create_user_firstName" required>

    <label for="create_user_lastName">Last Name: </label>
    <input type="text" name="create_user_lastName" id="create_user_lastName">

    <label for="create_user_email">Email: </label>
    <input type="email" name="create_user_email" id="create_user_email">

    <label for="create_user_department">Department: </label>
    <input type="text" name="create_user_department" id="create_user_department">

    <label for="create_user_role">Role: </label>
    <select name="create_user_role" id="create_user_role" required>
        <option value="" disabled selected>Select a Role</option>
        <option value="Admin">Admin</option>
        <option value="User">User</option>
    </select>

    <input type="submit">
</form>

{# UPDATE form #}
<h2>Update a User</h2>
<form class="cuForm" id="update_user_form">
    <label for="update_user_id">User to Update: </label>
    <select name="update_user_id" id="update_user_id" required>
        <option value="" disabled selected>Select a User</option>
        {% for user in users %}
        <option value="{{user['userID']}}" required>
            {{user['userID']}}
            {{user['firstName']}}
            {{user['lastName']}}
        </option>
        {% endfor %}
    </select>

    <label for="update_user_email">Email: </label>
    <input type="email" name="update_user_email" id="update_user_email">

    <label for="update_user_department">Department: </label>
    <input type="text" name="update_user_department" id="update_user_department">

    <label for="update_user_role">Role: </label>
    <select name="update_user_role" id="update_user_role" required>
        <option value="Admin">Admin</option>
        <option value="User">User</option>
    </select>

    <input type="submit">
</form>

{% endblock %}