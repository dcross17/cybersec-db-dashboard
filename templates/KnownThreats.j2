<table>
    <thead>
        <tr>
            {% if knownThreats|length > 0 %}
                {% for key in knownThreats[0].keys() %}
                    <th>{{ key }}</th>
                {% endfor %}
                <th></th>
            {% else %}
                <th>No data available</th>
            {% endif %}
        </tr>
    </thead>
    <tbody>
        {% if knownThreats|length > 0 %}
            {% for knownThreat in knownThreats %}
            <tr>
                <td>{{ knownThreat['Threat ID'] }}</td>
                <td>{{ knownThreat['Name'] }}</td>
                <td>{{ knownThreat['Type'] }}</td>
                <td>{{ knownThreat['Description'] }}</td>
                <td>{{ knownThreat['Date First Seen'] }}</td>
                <td>{{ knownThreat['Date Last Seen'] }}</td>
                <td>
                    <form id="delete_knownThreat_form" method="POST" action="/KnownThreats/delete" style="display:inline;">
                        <input type="hidden" name="delete_knownThreat_id" value="{{ knownThreat['Threat ID'] }}">
                        <input type="hidden" name="delete_knownThreat_name" value="{{ knownThreat['Name'] }}">
                        <button type="submit">Delete</button>
                    </form>
                </td>
            </tr>
            {% endfor %}
        {% else %}
            <tr>
                <td colspan="7">No known threats found.</td>
            </tr>
        {% endif %}
    </tbody>
</table>



