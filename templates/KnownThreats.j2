{% extends "main.j2" %}
{% block content %}

<h1>Known Threats</h1>
{# CREATE form #}
<h2>Create a knownThreat</h2>
<form class="cuForm" id="create_knownThreat_form" method="POST" action="/KnownThreats/create">
    <label for="create_knownThreat_firstName">Threat Name: </label>
    <input type="text" name="create_knownThreat_name" id="create_knownThreat_name" required>

    <label for="create_knownThreat_type">Type: </label>
    <select name="create_knownThreat_type" id="create_knownThreat_type" required>
        <option value="" disabled selected>Select a type</option>
        <option value="Malware">Malware</option>
        <option value="Exploit">Exploit</option>
        <option value="Tool">Tool</option>
        <option value="Other">Other</option>
    </select>

    <label for="create_knownThreat_description">Description: </label>
    <input type="textarea" name="create_knownThreat_description" id="create_knownThreat_description" required>

    <label for="create_knownThreat_dateFirstSeen">Date First Seen: </label>
    <input type="date" name="create_knownThreat_dateFirstSeen" id="create_knownThreat_dateFirstSeen" required>

    <label for="create_knownThreat_dateLastSeen">Date Last Seen: </label>
    <input type="date" name="create_knownThreat_dateLastSeen" id="create_knownThreat_dateLastSeen" required>


    <input type="submit">
</form>

{# UPDATE form #}
<h2>Update a knownThreat</h2>
<form class="cuForm" id="update_knownThreat_form" method="POST" action="/KnownThreats/update">
    <label for="update_knownThreat_id">Threat to Update: </label>
    <select name="update_knownThreat_id" id="update_knownThreat_id" required>
        <option value="" disabled selected>Select a knownThreat</option>
        {% for knownThreat in knownThreats %}
        <option value="{{knownThreat['Threat ID']}}" required>
            {{knownThreat['Threat ID']}} {{knownThreat['Name']}}
        </option>
        {% endfor %}
    </select>

    <label for="update_knownThreat_name">Threat Name: </label>
    <input type="text" name="update_knownThreat_name" id="update_knownThreat_name">

    <label for="update_knownThreat_type">Type: </label>
    <select name="update_knownThreat_type" id="update_knownThreat_type" required>
        <option value="" disabled selected>Select a type</option>
        <option value="Malware">Malware</option>
        <option value="Exploit">Exploit</option>
        <option value="Tool">Tool</option>
        <option value="Other">Other</option>
    </select>

    <label for="update_knownThreat_description">Description: </label>
    <input type="textarea" name="update_knownThreat_description" id="update_knownThreat_description">

    <label for="update_knownThreat_dateFirstSeen">Date First Seen: </label>
    <input type="date" name="update_knownThreat_dateFirstSeen" id="update_knownThreat_dateFirstSeen">
    
    <label for="update_knownThreat_dateLastSeen">Date Last Seen: </label>
    <input type="date" name="update_knownThreat_dateLastSeen" id="update_knownThreat_dateLastSeen">

    <input type="submit">
</form>

