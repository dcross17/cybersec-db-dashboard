{# READ table #}
<table>
    <thead>
        <tr>
            {% if responses|length > 0 %}
                {% for key in responses[0].keys() %}
                    <th>{{ key }}</th>
                {% endfor %}
                <th></th>
            {% else %}
                <th>No data available</th>
            {% endif %}
        </tr>
    </thead>
    <tbody>
        {% if responses|length > 0 %}
            {% for response in responses %}
            <tr>
                <td>{{ response['Response ID'] }}</td>
                <td>{{ response['Incident ID'] }}</td>
                <td>{{ response['User ID'] }}</td>
                <td>{{ response['Time Started'] }}</td>
                <td>{{ response['Time Ended'] }}</td>
                <td>{{ response['Action Performed'] }}</td>
                <td>{{ response['Status'] }}</td>
                <td>
                    <form id="delete_incident_form" method="POST" action="/Responses/delete" style="display:inline;">
                        <input type="hidden" name="delete_response_id" value="{{ response['Response ID'] }}">
                        <button type="submit">Delete</button>
                    </form>
                </td>
            </tr>
            {% endfor %}
        {% else %}
            <tr>
                <td colspan="8">No responses found.</td>
            </tr>
        {% endif %}
    </tbody>
</table>



{% endblock %}