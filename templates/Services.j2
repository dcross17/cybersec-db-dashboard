{% extends "main.j2" %}
{% block content %}

<h1>Services</h1>
{# CREATE form #}
<h2>Create a Service</h2>
<form class="cuForm" id="create_service_form" method="POST" action="/Services/create">
    <label for="create_service_firstName">Service Name: </label>
    <input type="text" name="create_service_name" id="create_service_name" required>

    <label for="create_service_port">Port: </label>
    <input type="number" name="create_service_port" id="create_service_port" min = "0" max = "65535" required>

    <label for="create_service_protocol">Protocol: </label>
    <select name="create_service_protocol" id="create_service_protocol" required>
        <option value="" disabled selected>Select a protocol</option>
        <option value="TCP">TCP</option>
        <option value="UDP">UDP</option>
        <option value="Other">Other</option>
    </select>


    <input type="submit">
</form>

{# UPDATE form #}
<h2>Update a Service</h2>
<form class="cuForm" id="update_service_form" method="POST" action="/Services/update">
    <label for="update_service_id">Service to Update: </label>
    <select name="update_service_id" id="update_service_id" required>
        <option value="" disabled selected>Select a Service</option>
        {% for service in services %}
        <option value="{{service['Service ID']}}" required>
            {{service['Service ID']}} -
            {{service['Service Name']}}
        </option>
        {% endfor %}
    </select>

    <label for="update_service_name">Service Name: </label>
    <input type="text" name="update_service_name" id="update_service_name">

    <label for="update_service_port">Port: </label>
    <input type="number" name="update_service_port" min = "0" max = "65535" id="update_service_port">

    <label for="update_service_protocol">Protocol: </label>
    <select name="update_service_protocol" id="update_service_protocol">
        <option value="" disabled selected>Select a protocol</option>
        <option value="TCP">TCP</option>
        <option value="UDP">UDP</option>
        <option value="Other">Other</option>
    </select>

    <input type="submit">
</form>

