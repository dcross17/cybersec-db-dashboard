{% extends "main.j2" %}
{% block content %}

<h1>Incident Devices</h1>
{# CREATE form #}
<h2>Create an IncidentDevice Intersection</h2>
<form class="cuForm" id="create_incident_form" method="POST" action="/IncidentDevices/create">

    <label for="create_incidentID">Incident ID: </label>
    <select name="create_incident_id" id="create_incident_id" required>
        <option value="" disabled selected>Select an Incident</option>
        {% for incident in incidents %}
        <option value="{{incident['incidentID']}}" required>
            {{incident['incidentID']}}
        </option>
        {% endfor %}
    </select>


    <label for="create_deviceID">Device ID: </label>
    <select name="create_device_id" id="create_device_id" required>
        <option value="" disabled selected>Select an Incident</option>
        {% for device in devices %}
        <option value="{{device['deviceID']}}" required>
            {{device['deviceID']}} - {{device['deviceName']}}
        </option>
        {% endfor %}
    </select>


    <input type="submit">
</form>

{# UPDATE form #}
<h2>Update an IncidentDevice Intersection</h2>
<form class="cuForm" id="update_incident_form" method="POST" action="/IncidentDevices/update">

    <label for="update_incidentDevicesID">Incident Devices ID: </label>
