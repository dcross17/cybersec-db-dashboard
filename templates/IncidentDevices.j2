{# READ table #}
<table>
    <thead>
        <tr>
            {% if incidentDevices|length > 0 %}
                {% for key in incidentDevices[0].keys() %}
                    <th>{{ key }}</th>
                {% endfor %}
                <th></th>
            {% else %}
                <th>No data available</th>
            {% endif %}
        </tr>
    </thead>
    <tbody>
        {% if incidentDevices|length > 0 %}
            {% for incidentDevice in incidentDevices %}
            <tr>
                <td>{{ incidentDevice['Incident Devices ID'] }}</td>
                <td>{{ incidentDevice['Incident ID'] }}</td>
                <td>{{ incidentDevice['Device ID'] }}</td>
                <td>
                    <form id="delete_incidentDevice_form" method="POST" action="/IncidentDevices/delete" style="display:inline;">
                        <input type="hidden" name="delete_incidentDevice_id" value="{{ incidentDevice['Incident Devices ID'] }}">
                        <input type="hidden" name="delete_incident_id" value="{{ incidentDevice['Incident ID'] }}">
                        <input type="hidden" name="delete_device_id" value="{{ incidentDevice['Device ID'] }}">
                        <button type="submit">Delete</button>
                    </form>
                </td>
            </tr>
            {% endfor %}
        {% else %}
            <tr>
                <td colspan="4">No incident devices found.</td>
            </tr>
        {% endif %}
    </tbody>
</table>



{% endblock %}