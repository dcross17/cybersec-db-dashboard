{% extends "main.j2" %}
{% block content %}

<h1>Device Services</h1>
{# CREATE form #}
<h2>Create DeviceService</h2>
<form class="cuForm" id="create_deviceService_form" method="POST" action="/DeviceServices/create">
    <label for="create_deviceService_firstName">DeviceService Name: </label>
    <select name="create_deviceService_device" id="create_deviceService_device" required>
        <option value="" disabled selected>Select a Device</option>
        {% for device in devices %}
        <option value="{{device['deviceID']}}" required>
            {{device['deviceID']}} -
            {{device['deviceName']}}
        </option>
        {% endfor %}
    </select>

    <select name="create_deviceService_service" id="create_deviceService_service" required>
        <option value="" disabled selected>Select a Service</option>
        {% for service in services %}
        <option value="{{service['serviceID']}}" required>
            {{service['serviceID']}} -
            {{service['serviceName']}}
        </option>
        {% endfor %}
    </select>


    

    <input type="submit">
</form>

{# UPDATE form #}
<h2>Update DeviceService</h2>
<form class="cuForm" id="update_deviceService_form" method="POST" action="/DeviceServices/update">
    <label for="update_deviceService_id">deviceService to Update: </label>
    <select name="update_deviceService_id" id="update_deviceService_id" required>
        <option value="" disabled selected>Select a deviceService</option>
        {% for deviceService in deviceServices %}
        <option value="{{deviceService['Device Service ID']}}" required>
            {{deviceService['Device Service ID']}}
        </option>
        {% endfor %}
    </select>

    <label for="update_deviceService_device">Device: </label>
    <select name="update_deviceService_device" id="update_deviceService_device" required>
        <option value="" disabled selected>Select a Device</option>
        {% for device in devices %}
        <option value="{{device['deviceID']}}" required>
            {{device['deviceID']}} -
            {{device['deviceName']}}
        </option>
        {% endfor %}
    </select>

    <label for="update_deviceService_service">Service: </label>
    <select name="update_deviceService_service" id="update_deviceService_service" required>
        <option value="" disabled selected>Select a Service</option>
        {% for service in services %}
        <option value="{{service['serviceID']}}" required>
            {{service['serviceID']}} -
            {{service['serviceName']}}
        </option>
        {% endfor %}
    </select>

    <input type="submit">
</form>

