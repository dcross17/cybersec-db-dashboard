    <select name="create_deviceService_device" id="create_deviceService_device" required>
        <option value="" disabled selected>Select a Device</option>
        {% for device in devices %}
        <option value="{{device['deviceID']}}" required>
            {{device['deviceID']}} -
            {{device['deviceName']}}
        </option>
        {% endfor %}
    </select>

    <select name="create_deviceService_service" id="create_deviceService_service" required>
        <option value="" disabled selected>Select a Service</option>
        {% for service in services %}
        <option value="{{service['serviceID']}}" required>
            {{service['serviceID']}} -
            {{service['serviceName']}}
        </option>
        {% endfor %}
    </select>


    

    <input type="submit">
</form>

