{# READ table #}
<table>
    <thead>
        <tr>
            {% if deviceServices|length > 0 %}
                {% for key in deviceServices[0].keys() %}
                    <th>{{ key }}</th>
                {% endfor %}
                <th></th>
            {% else %}
                <th>No data available</th>
            {% endif %}
        </tr>
    </thead>
    <tbody>
        {% if deviceServices|length > 0 %}
            {% for deviceService in deviceServices %}
            <tr>
                <td>{{ deviceService['Device Service ID'] }}</td>
                <td>{{ deviceService['Device ID'] }}</td>
                <td>{{ deviceService['Service ID'] }}</td>
                <td>
                    <form id="delete_deviceService_form" method="POST" action="/DeviceServices/delete" style="display:inline;">
                        <input type="hidden" name="delete_deviceService_id" value="{{ deviceService['Device Service ID'] }}">
                        <input type="hidden" name="delete_device_id" value="{{ deviceService['Device ID'] }}">
                        <input type="hidden" name="delete_service_id" value="{{ deviceService['Service ID'] }}">
                        <button type="submit">Delete</button>
                    </form>
                </td>
            </tr>
            {% endfor %}
        {% else %}
            <tr>
                <td colspan="4">No device services found.</td>
            </tr>
        {% endif %}
    </tbody>
</table>



