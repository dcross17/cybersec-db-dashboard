{% extends "main.j2" %}
{% block content %}

<h1>Incidents</h1>

{# READ table #}
<table>
    <thead>
        {# For the table header row, we print the DB attribute names #}
        <tr>
            {% for key in incidents[0].keys() %}
            <th>{{ key }}</th>
            {% endfor %}
            <th></th>
        </tr>
    </thead>

    <tbody>
        {% for incident in incidents %}
        <tr>
            <td>{{ incident['Incident ID'] }}</td>
            <td>{{ incident['Time Occurred'] }}</td>
            <td>{{ incident['Description'] }}</td>
            <td>{{ incident['Priority'] }}</td>
            <td>{{ incident['Status'] }}</td>
            <td>{{ incident['Threat ID'] }}</td>


            {# DELETE form #}
            <form id="delete_incident_form"  method="POST" action = "/Incidents/delete">
                <input type="hidden" name="delete_incident_id" value="{{ incident['Incident ID'] }}">
                <td>
                    <button type="submit">
                        Delete
                    </button>
                </td>
            </form>
        </tr>
        {% endfor %}
    </tbody>
</table>

{# CREATE form #}
<h2>Create an Incident</h2>
<form class="cuForm" id="create_incident_form">
    
    <label for="create_incident_timeOccurred">Time and Date: </label>
    <input type="datetime-local" name="create_incident_timeOccurred" id="create_incident_timeOccurred" required>

    <label for="create_incident_description">Description: </label>
    <input type="text" name="create_incident_description" id="create_incident_description" required>
    
    <label for="create_incident_priority">Priority: </label>
    <select name="create_incident_priority" id="create_incident_priority" required>
        <option value="" disabled selected>Select a Priority</option>
        {% for incident in incidents %}
            <option value="{{incident['priority']}}">
                {{incident['Incident ID']}}
            </option>
        {% endfor %}
    </select>

    <label for="create_incident_status">Status: </label>
    <select name="create_incident_status" id="create_incident_status" required>
        <option value="" disabled selected>Select a Status</option>
        <option value="Not Started">Not Started</option>
        <option value="In Progress">In Progress</option>
        <option value="Completed">Completed</option>
    </select>

    <label for="create_incident_threatID">Threat: </label>
    <select name="update_threat_id" id="update_threat_id" required>
        <option value="" disabled selected>Select a Threat</option>
        {% for threat in threats %}
        <option value="{{threat['threatID']}}">
            {{threat['threatID']}} - {{threat['name']}}
        </option>
        {% endfor %}
    </select>

    

    <input type="submit">
</form>

{# UPDATE form #}
